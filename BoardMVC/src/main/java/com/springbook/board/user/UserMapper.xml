<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springbook.board.user.UserMapper">
	  <insert id="join"  parameterType="com.springbook.board.user.UserVO" useGeneratedKeys="true" keyProperty="i_user">
		insert into t_user
		(uid, upw, salt, nm, addr,ph)
		values
		(#{uid}, #{upw},  #{salt}, #{nm}, #{addr},#{ph})
	</insert>

	<select id ="login" resultType="com.springbook.board.user.UserVO" parameterType="com.springbook.board.user.UserVO">
		select i_user ,uid, salt, upw, nm from t_user where uid=#{uid}
	</select>
	

</mapper>